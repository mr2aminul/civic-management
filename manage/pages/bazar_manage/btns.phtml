          <script>
          
          
            // --- Cookie Helpers ---
            function setCookie(name, value, days) {
              let expires = "";
              if (days) {
                let date = new Date();
                date.setTime(date.getTime() + (days*24*60*60*1000));
                expires = "; expires=" + date.toUTCString();
              }
              document.cookie = name + "=" + (value || "") + expires + "; path=/";
            }
            
            function getCookie(name) {
              let nameEQ = name + "=";
              let ca = document.cookie.split(';');
              for (let i = 0; i < ca.length; i++) {
                let c = ca[i];
                while (c.charAt(0) == ' ') c = c.substring(1, c.length);
                if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length, c.length);
              }
              return null;
            }
            
            // Save cookie when user picks a month
            function saveMonthCookie() {
              const picker = document.getElementById("month_year");
              if (picker && picker.value) {
                setCookie("month_year", picker.value, 30); // store for 30 days
              }
            }
            
            // On load: set value from cookie, else fallback to current month
            document.addEventListener("DOMContentLoaded", function() {
              const picker = document.getElementById("month_year");
              if (!picker) return;
            
              let saved = getCookie("month_year");
            
              if (saved) {
                picker.value = saved;
              } else {
                let today = new Date();
                let year = today.getFullYear();
                let month = String(today.getMonth() + 1).padStart(2, "0");
                picker.value = `${year}-${month}`;
              }
            });

            // Icon render for Select2
            function formatIcon(icon) {
              if (!icon.id) return icon.text;
              const iconClass = $(icon.element).data('icon');
              const text = icon.text || $(icon.element).text();
              return $('<span><i class="' + iconClass + ' me-1"></i>' + text + '</span>');
            }

            $('#add_bazarItem').on('shown.bs.modal', function () {
              $('#icon').select2({
                width: '100%',
                dropdownParent: $('#add_bazarItem'),
                templateResult: formatIcon,
                templateSelection: formatIcon,
                escapeMarkup: function(m) { return m; }
              });
            });
          $(function () {
              

            // Focus search input when dropdown opens
            $(document).on('select2:open', () => {
              setTimeout(() => {
                document.querySelector('.select2-container--open .select2-search__field')?.focus();
              }, 0);
            });

            // Update preview
            $('#icon').on('change', function () {
              const selectedIcon = $(this).val();
              $('#iconPreview').attr('class', selectedIcon || 'bx bx-question-mark');
            });

            // Clear form + Select2 + close modal
            function resetAndClose() {
              const form = document.getElementById('uploadForm');
              if (form) form.reset();

              $('#icon').val('').trigger('change');
              $('#iconPreview').attr('class', 'bx bx-question-mark');

              const modalEl = document.getElementById('add_bazarItem');
              const modal = bootstrap.Modal.getInstance(modalEl) || new bootstrap.Modal(modalEl);
              modal.hide();
            }

            $('#reset_close_form').on('click', resetAndClose);

            // Submit form -> backend admin_add_bazar
            $('#uploadForm').on('submit', function (e) {
              e.preventDefault();
              const formData = new FormData(this);

              $.ajax({
                url: Wo_Ajax_Requests_File() + '?f=manage_bazar&s=admin_add_bazar',
                type: 'POST',
                data: formData,
                dataType: 'json',
                contentType: false,
                processData: false,
                cache: false,
                success: function (data) {
                  if (data && data.status == 200) {
                    $('#uploadResult').html(data.html || '');
                    pos5_success_noti('Item added successfully.');
                    setTimeout(() => resetAndClose(), 200);
                    // Refresh admin datatable if present
                    if (typeof DataTableRefresh === 'function') DataTableRefresh();
                  } else {
                    pos4_error_noti((data && data.message) ? data.message : 'Failed to add item.');
                  }
                },
                error: function () {
                  pos4_error_noti('AJAX error occurred.');
                }
              });
            });
          });
          </script>
