<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape>
            <corners android:radius="100dp"/>
            <gradient
                android:angle="270"
                android:startColor="#26000000"
            android:endColor="#00000000"
            android:type="radial"
            android:gradientRadius="15dp"/>
        </shape>
    </item>

    <!-- Main Button Layer -->
    <item android:left="3dp" android:top="3dp">
        <shape>
            <solid android:color="#0063F8"/>
            <corners android:radius="100dp"/>
            <stroke android:color="#0063F8" android:width="2dp"/>
        </shape>
    </item>
</layer-list>
