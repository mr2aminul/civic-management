<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Lead Name -->
        <TextView
            android:id="@+id/leadName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lead Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <!-- Katha (optional) -->
        <TextView
            android:id="@+id/leadKatha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Katha (optional)"
            android:paddingBottom="8dp"/>

        <!-- Phone with CTA -->
        <TextView
            android:id="@+id/leadPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="017XXXXXXXX"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:autoLink="phone"/>

        <!-- Project -->
        <TextView
            android:id="@+id/leadProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project"
            android:paddingBottom="8dp"/>

        <!-- Email (optional) -->
        <TextView
            android:id="@+id/leadEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="email@example.com"
            android:autoLink="email"
            android:paddingBottom="16dp"/>

        <!-- Open Lead in App Button -->
        <Button
            android:id="@+id/btnOpenLead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Lead in App"/>

    </LinearLayout>
</ScrollView>
