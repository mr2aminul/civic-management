<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:padding="16dp">

    <!-- Main container for the overlay content -->
    <LinearLayout
        android:id="@+id/overlayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/overlay_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title of the alarm -->
        <TextView
            android:id="@+id/overlayTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Alarm Title"
            android:textColor="#0063F8"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Description of the alarm -->
        <TextView
            android:id="@+id/overlayDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Alarm Description"
            android:textColor="#353535"
            android:textSize="18sp" />

        <!-- LinearLayout for inline buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- View Details Button -->
            <Button
                android:id="@+id/btnOverlayViewDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_view_details"
                android:keepScreenOn="false"
                android:text="View Details"
                android:textColor="#FFFFFF" />

            <!-- Dismiss Button -->
            <Button
                android:id="@+id/btnOverlayDismiss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_dismiss"
                android:text="Dismiss"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
