<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Employee Monitoring Consent"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please read the following terms carefully"
        android:textSize="14sp"
        android:textColor="#7F8C8D"
        android:gravity="center"
        android:paddingBottom="24dp" />

    <ScrollView
        android:id="@+id/termsScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F8F9FA"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/termsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#2C3E50"
            android:lineSpacingExtra="4dp" />
    </ScrollView>

    <CheckBox
        android:id="@+id/consentCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I have read and accept the Employee Monitoring Terms and Conditions"
        android:textSize="14sp"
        android:textColor="#2C3E50"
        android:padding="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/declineButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Decline"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_dismiss"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/acceptButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Accept &amp; Continue"
            android:textColor="#FFFFFF"
            android:background="@drawable/allow_button_bg"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
